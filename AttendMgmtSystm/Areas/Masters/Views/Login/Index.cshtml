@model AttendMgmtSystm.Models.EmpMst

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h3> Login </h3>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="PhNo"> Phone Number </label>
        <input asp-for="PhNo" class="form-control" />
        <span asp-validation-for="PhNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Passw"> Password</label>
        <input asp-for="Passw" type="password" class="form-control" />
        <span asp-validation-for="Passw" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"> Login </button>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}