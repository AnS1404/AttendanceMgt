@model IEnumerable<AttendMgmtSystm.Models.EmpMst>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h2>Employee Details </h2>

<p>
    <a href="@Url.Action("Create")"> Create New Employee Entry  </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passw)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passw)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmpId"> Edit </a>  |
                <a asp-action="Details" asp-route-id="@item.EmpId"> Details </a>  |
                <a asp-action="Delete" asp-route-id="@item.EmpId"> Delete </a>
            </td>
        </tr>
}
    </tbody>
</table>
